<!DOCTYPE html>
<%- include header_user.ejs%>
<html lang="en">
  <head>
    <meta charset="utf-8"> 
    <!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
	
	<!-- jQuery library -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	
	<!-- Latest compiled JavaScript -->
	<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

	<style>
		body 		{ padding-top:80px; }
	</style>
	<script>
		$(document).ready(function(){
			
			$(".testing").click(function(){
				var value = $(this).html();
			});
			
		});
		
	</script>
	
  </head>
  
  <body>
  <center>
  	<h2>Flight Booking History</h2>
  	<h4>You can cancel flights by clicking on cancel button</h4>
  </center>


  <div class="panel panel-primary">
	<div class="panel-heading">
   		<h3 class="panel-title">Flights List</h3>
  	</div>
  	<div class="panel-body">
  	<table class="table table-striped">
  		<thead>
	      <tr>
	        <th>Flight Number</th>
	        <th>Flying From</th>
	        <th>Flying to</th>
	        <th>Departing</th>
	        <th>Arriving</th>
	        <th>Flight Model</th>
	        <th>Flight Company</th>
	        <th>Seat Class</th>
	        <th>Price ($)</th>
	        <th>Booking Time Class</th>
	      </tr>
	    </thead>
  	
	  	<tbody>
	  		<% for(var i = 0; i < show.length; i++){%>
	  		<tr>
				<td class="testing"><%= show[i].Flight_num %></td>
				<td class="example"><%= show[i].Flight_scity %></td>
				<td><%= show[i].Flight_ecity %></td>
		    	<td><%= show[i].Flight_stime %></td>
		  		<td><%= show[i].Flight_etime %></td> 
		  		<td><%= show[i].Flight_model %></td>
		  		<td><%= show[i].Flight_company %></td>
		  		<td><%= show[i].History_seat %></td>
		  	    <td><%= show[i].History_price %></td>
		  	    <td><%= show[i].History_time %></td>
		  	    <td>
		  	    	<% var t= show[i].Flight_stime.toString(); %>
		  	    	<% var sqlDate = new Date(t);%>
		  	    	<% var n= new Date();%>
		  	    	<% if(sqlDate>n){ %>
		  	    	<span>
		  	    		<form action="/cancel/<%= show[i].History_id %>" method="get">
		  	    			<input type="submit" class="btn btn-primary btn-xs" Value="Cancel"/>
		  				</form>
		  	    	</span>
		  	    	<%}%>
		  	    </td>
	  	    </tr>  
	  		<% } %>	
	  	</tbody>
  	</table>
  	</div>
  </div>
  

  
</body>
</html>
